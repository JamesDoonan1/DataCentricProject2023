<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores Page</title>
    <style>
        h1 {
            text-align: center;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        td a {
            text-decoration: none;
            color: #3498db;
        }

        td a:hover {
            color: #2980b9;
        }

        a {
            display: block;
            margin: 20px auto;
            text-align: center;
            text-decoration: none;
            padding: 10px 20px;
            background-color: #2ecc71;
            color: #fff;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <h1>Stores Page</h1>

    <a href="/">Back to Home</a>

    <table>
        <thead>
            <tr>
                <th>Store ID</th>
                <th>Location</th>
                <th>Manager ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% stores.forEach(store => { %>
                <tr>
                    <td><%= store.sid %></td>
                    <td><%= store.location %></td>
                    <td><%= store.mgrid %></td>
                    <td>
                        <a href="/stores/edit/<%= store.sid %>">Update</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/stores/add">Add Store</a>
</body>

</html>
