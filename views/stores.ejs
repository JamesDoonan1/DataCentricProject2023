<!-- views/stores.ejs -->

<h1>Stores Page</h1>

<a href="/">Back to Home</a> <!-- Add this line for the link back to home -->

<table>
    <thead>
        <tr>
            <th>Store ID</th>
            <th>Location</th>
            <th>Manager ID</th>
            <!-- Add other columns as needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% stores.forEach(store => { %>
            <tr>
                <td>
                    <%= store.sid %>
                </td>
                <td>
                    <%= store.location %>
                </td>
                <td>
                    <%= store.mgrid %>
                </td>
                <!-- Add other columns as needed -->
                <td>
                    <a href="/stores/edit/<%= store.sid %>">Update</a>
                    <!-- Add other action links as needed -->
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<a href="/stores/add">Add Store</a>
